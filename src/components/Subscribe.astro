---
import persona from "../assets/persona.svg";
import vector from "../assets/vector.svg";
---

<!-- contacto -->
<section
  id="contacto"
  class="relative px-4 sm:px-8 md:px-20 py-12 sm:py-16 md:py-20 z-0 w-full overflow-hidden"
>
  <div
    class="relative bg-frontend px-4 sm:px-6 md:px-12 lg:px-20 py-8 sm:py-10 max-w-[1500px] h-auto min-h-[350px] mx-auto flex flex-col lg:flex-row items-center justify-between gap-8 sm:gap-12 lg:gap-40 overflow-visible"
  >
    <div class="w-full lg:w-1/2 text-center lg:text-left">
      <span class="text-lg sm:text-xl font-bold text-texto bg-nav-bg px-4 py-2">
        ¡Suscríbete!
      </span>
      <h3
        class="text-xl sm:text-2xl md:text-3xl lg:text-4xl font-extrabold mt-4 mb-6 text-background leading-snug"
      >
        Únete y forma parte <br /> de esta comunidad
      </h3>

      <form
        class="flex flex-col sm:flex-row items-center sm:items-start gap-2 bg-texto rounded-full px-4 py-2 w-full max-w-sm mx-auto lg:mx-0"
      >
        <input
          type="email"
          placeholder="Ingresar correo"
          class="rounded-full px-3 py-2 w-full sm:w-[220px] text-black placeholder-gray-500 focus:outline-none text-sm"
        />
        <button
          type="submit"
          class="w-full sm:w-[99px] h-[39px] bg-secondary text-texto text-xs font-bold rounded-full uppercase hover:bg-nav-bg hover:text-secondary transition"
        >
          suscribirse
        </button>
      </form>
    </div>
    <div
      class="w-full lg:w-1/2 flex justify-center overflow-visible relative z-30"
    >
      <img
        src={persona.src}
        alt="persona"
        class="w-[300px] h-[400px] sm:w-[400px] sm:h-[500px] md:w-[500px] md:h-[700px] object-contain z-30"
      />
    </div>

    <img
      src={vector.src}
      alt="vector"
      class="absolute bottom-0 left-0 w-full z-10"
    />
  </div>
</section>
