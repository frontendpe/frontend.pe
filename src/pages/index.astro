---
import Nav from "../components/Nav.astro";
import Layout from "../layouts/Layout.astro";
import AboutUs from "../components/AboutUs.astro";

import banner from "../assets/banner.svg";
import obj2 from "../assets/Capa_1.svg";
import obj3 from "../assets/Capa_2.svg";
import obj1 from "../assets/Group 2.svg";
import foto from "../assets/meetups-home.png";
import stats from "../assets/stats.png";

import "../styles/global.css";
import BannerSvg from "../components/BannerSvg.astro";
---

<Layout>
  <main
    class="bg-background text-texto font-sans flex flex-col gap-8 bg-pattern-repeat-x bg-pattern-size-auto pt-10 overflow-hidden"
  >
    <Nav />
    <!-- Inicio -->
    <section
      id="inicio"
      class="flex flex-col items-center text-center pt-12 sm:pt-16 md:pt-24 gap-8 sm:gap-12 py-8 "
    >
      <h2
        class="text-md sm:text-lg md:text-4xl tracking-widest uppercase text-nav-bg md:my-14 my-4 sm:my-8"
      >
        El futuro se programa línea por línea.
      </h2>
      <div class="w-full overflow-x-auto" data-banner-scroll>
        <div class="w-full pt-10">
          <BannerSvg />
        </div>
      </div>
    </section>

    <AboutUs />

    <!-- Objetivos -->
    <section
      class="flex flex-col relative justify-center items-center gap-8 sm:gap-10 w-full overflow-hidden py-12 sm:py-16 bg-pattern-2 bg-repeat"
    >
      <div
        class="relative z-10 flex flex-col items-center text-center px-4 sm:px-6"
      >
        <h3 class="text-2xl sm:text-3xl font-bold text-texto mb-8 sm:mb-16">
          Nuestros objetivos
        </h3>
        <div
          class="flex flex-col lg:flex-row gap-8 sm:gap-10 justify-center items-stretch max-w-5xl"
        >
          <!-- Objetivo 1 -->
          <div class="flex flex-col items-center text-center h-full px-4">
            <div
              class="bg-nav-bg p-3 rounded-md flex items-center justify-center mb-6"
            >
              <img src={obj1.src} class="w-12 h-12 sm:w-16 sm:h-16" />
            </div>
            <p
              class="text-texto font-regular leading-relaxed text-sm sm:text-base"
            >
              Difundir las tecnologías Web Front-end en el ámbito tecnológico y
              emprendimientos a nivel nacional.
            </p>
          </div>

          <!-- Objetivo 2 -->
          <div class="flex flex-col items-center text-center h-full px-4">
            <div
              class="bg-nav-bg p-3 rounded-md flex items-center justify-center mb-6"
            >
              <img src={obj2.src} class="w-12 h-12 sm:w-16 sm:h-16" />
            </div>
            <p
              class="text-texto font-regular leading-relaxed text-sm sm:text-base"
            >
              Permitir a los profesionales y emprendedores del país el
              desarrollo de sus actividades usando herramientas y procedimientos
              actuales.
            </p>
          </div>

          <!-- Objetivo 3 -->
          <div class="flex flex-col items-center text-center h-full px-4">
            <div
              class="bg-nav-bg p-3 rounded-md flex items-center justify-center mb-6"
            >
              <img src={obj3.src} class="w-12 h-12 sm:w-16 sm:h-16" />
            </div>
            <p
              class="text-texto font-regular leading-relaxed text-sm sm:text-base"
            >
              Contribuir con nuestra sociedad en compartir conocimiento,
              emprendimiento, tecnología y networking.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- meetups -->
    <section id="meetups" class="text-texto pt-12 sm:py-16">
